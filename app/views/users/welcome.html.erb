<script>
  (function() {
    var token = '<%= session[:api_token] %>';
    if (token !== '') {
      var a = token.split(' ');
      if (a.length === 2) {
        document.cookie = ('XNClient=' + a[0] + '; path=/');
        document.cookie = ('XNToken=' + a[1] + '; path=/');
      }
    }
    return true;
  })();
</script>

<div class="alert alert-info">Thank you for Registering!</div>
<div class="panel">
  <div class="panel-body">
    <p>
      Your account has been submitted for approval.  
      <br/>
      You will receive an email notification when your account has been approved</p>
  </div>
</div>

<p>
  <code style='display:none' class='token-toggle'><%= session[:api_token] %></code>
</p>
